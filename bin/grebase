PROGDIR=$(dirname $0)
[ "$PROGDIR" = "." ] && PROGDIR=$(pwd)

. $PROGDIR/giter-common-functions


# Do git rebase -i

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
	echo "grebase - do interactive rebase for last N commits"
	echo "Use: grebase [N]"
	echo "   N - number of the commit (will ask if empty)"
	exit 0
fi

NN=$1
if [ -z "$NN" ] ; then
	echo "Will do commit rebase. Last commit list:"
	git log --pretty=format:"%s, %cd" | head -n 20 | cat -n
	echo "Input line number (next after needed) or Enter to exit:"
	read NN other
	# try convert to numeric
	NN=$(($NN + 0))
	[ "$NN" = "0" ] && fatal "Incorrect number"
fi

# TODO: select from commit list
CID="HEAD~$NN"
echo $CID
docmd git rebase -i $CID
